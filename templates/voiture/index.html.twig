{% extends 'base.html.twig' %}

{% block title %}Liste des voitures{% endblock %}

{% block body %}
    <h1>Liste des voitures</h1>
    <div class="container-fluid mt-4">
        <table class="table">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>MATRICULE</th>
                <th>MARQUE</th>
                <th>MODEL</th>
                <th>NUMERO ASSURANCE</th>
                 <th>CHAUFFEUR</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.matricule }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.model }}</td>
                <td>{{ voiture.NumeroAssurance }}</td>
                <td>{{ voiture.chauffeur }}</td>
                <td>
                    <a href="{{ path('voiture_show', {'id': voiture.id}) }}"
                        class="btn btn-outline-primary">Afficher</a>
                    <a href="{{ path('voiture_edit', {'id': voiture.id}) }}"
                    class="btn btn-outline-info">Editer</a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('voiture_new') }}"  class="btn btn-primary">Ajouter une voiture</a>

    </div>

{% endblock %}
