{% extends 'base.html.twig' %}

{% block title %}Chauffeur index{% endblock %}

{% block body %}
    <h1>Chauffeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Email</th>
                <th>Password</th>
                <th>Adresse</th>
                <th>Cni</th>
                <th>NumeroPermis</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td>{{ chauffeur.id }}</td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.prenom }}</td>
                <td>{{ chauffeur.age }}</td>
                <td>{{ chauffeur.email }}</td>
                <td>{{ chauffeur.password }}</td>
                <td>{{ chauffeur.adresse }}</td>
                <td>{{ chauffeur.cni }}</td>
                <td>{{ chauffeur.numeroPermis }}</td>
                <td>{{ chauffeur.username }}</td>
                <td>
                    <a href="{{ path('chauffeur_show', {'id': chauffeur.id}) }}">show</a>
                    <a href="{{ path('chauffeur_edit', {'id': chauffeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chauffeur_new') }}">Create new</a>
{% endblock %}
